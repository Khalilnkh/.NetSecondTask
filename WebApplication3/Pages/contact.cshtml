    <div class="modal fade" id="nzxtModal" tabindex="-1" aria-labelledby="nzxtModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="modal-index">
                        <div class="close-btn" bis_skin_checked="1">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="tab">
                            <button class="tablinks active" onclick="openCity(event, 'London')">Login</button>
                            <button class="tablinks" onclick="openCity(event, 'Paris')">Register</button>
                        </div>

                        <hr />
                        <!-- Tab content -->
                        <div id="London" class="tabcontent" style="display: block;">
                            <form>
                                <div class="d-flex flex-column input-item">
                                    <label class="form-label" for="email">Email</label>
                                    <input id="email" type="text">
                                </div>
                                <div>
                                    <div class="row input-item">
                                        <div class="col">
                                            <label class="form-label"> Password</label>
                                        </div>
                                        <div class="col-auto">
                                            <a class="form-text small" href="#">Forgot password?</a>
                                        </div>
                                    </div>
                                    <input class="w-100" placeholder="Password" type="password"
                                           data-msg="Please enter your password">
                                </div>
                                <div class="form-group">
                                    <div class="custom-checkbox mt-3 mb-3">
                                        <input class="custom-control-input" id="loginRemember" type="checkbox">
                                        <label class="custom-control-label text-muted" for="loginRemember">
                                            <span class="text-sm">Remember me for 30 days</span>
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-block btn-outline-dark" type="submit">
                                        <i class="fa fa-sign-in-alt mr-2"></i> Log in
                                    </button>
                                </div>
                            </form>

                            <div class="social-login">
                                <hr class="my-3 hr-text">

                                <div class="tooltip-button d-flex align-items-center justify-content-center gap-1">
                                    <a href="#" class="tooltip-social" data-toggle="tooltip"
                                       title="Connect with Facebook!">
                                        <i class="fa-brands fa-facebook-f"></i>
                                    </a>
                                    <a href="#" class="tooltip-social" data-toggle="tooltip"
                                       title="Connect with Google!">
                                        <i class="fa-brands fa-google"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div id="Paris" class="tabcontent">
